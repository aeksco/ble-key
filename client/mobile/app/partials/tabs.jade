//- TODO - all of this file should be refactored into a Mn.View that's shown when the app has loaded.
mixin ons_toolbar(name)
  ons-toolbar
    .left
      ons-toolbar-button(onclick='fn.open()')
        ons-icon(icon='md-menu')
    .center= name


mixin page_content(name)
  p(style='text-align: center; opacity: 0.6; padding-top: 20px;')= name


mixin sidebar_item(name, template)
  ons-list-item(onclick="fn.load('#{template}')", tappable='')= name

//- Layout Template
ons-template(id='tabbar.html')
  ons-splitter

    //- Sidebar
    ons-splitter-side#menu(side='left', width='220px', collapse='', swipeable='')
      ons-page
        ons-list
          ons-list-header LYREBIRD
          +sidebar_item('Devices', 'device:list')
          +sidebar_item('Interfaces', 'interface:show')
          +sidebar_item('Snippets', 'snippet:list')
          //- +sidebar_item('Keychain', 'keychain.html')
          //- +sidebar_item('Settings', 'settings.html')
          //- +sidebar_item('About', 'about.html')

    //- Main
    ons-splitter-content#content(page='home.html')

